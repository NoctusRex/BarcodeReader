<Window x:Class="BarcodeReader.Windows.ScreenShotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarcodeReader.Windows"
        mc:Ignorable="d"
        Title="ScreenShotWindow" Background="#02FFFFFF" Topmost="True" WindowStartupLocation="Manual" WindowStyle="None" Foreground="Transparent" AllowsTransparency="True" KeyDown="GuiCanvas_KeyDown">
    
    <Border BorderBrush="Red" BorderThickness="4" KeyDown="GuiCanvas_KeyDown">
        <Canvas x:Name="GuiCanvas" MouseMove="GuiCanvas_MouseMove" MouseLeftButtonDown="GuiCanvas_MouseLeftButtonDown" MouseLeftButtonUp="GuiCanvas_MouseLeftButtonUp" Background="#00000000" KeyDown="GuiCanvas_KeyDown">
        </Canvas>
    </Border>
    
</Window>
